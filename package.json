{
  "name": "js13kgame",
  "version": "0.1.0",
  "description": "Glitch or die trying",
  "main": "src/main.js",
  "scripts": {
    "test": "rollup -i src/mainSpec.js -o dist/bundle-tests.js && babel dist/bundle-tests.js --out-file dist/bundle-tests-es5.js",
    "dev": "watch 'npm run test && npm run devjs' ./src",
    "devjs": "rollup -c -o dist/bundle.js && babel dist/bundle.js | indexhtmlify --title js13kgame --style src/main.css > dist/index.html",
    "build": "rollup -c -o dist/bundle.js && babel dist/bundle.js | uglifyjs -cm | indexhtmlify --title js13kgame --style src/main.css | html-minifier --minify-css > dist/index.html",
    "gulp-prod": "gulp --production",
    "gulp-prod-debug": "gulp --production --sourcemaps",
    "gulp-dev": "gulp watch",
    "gulp-release": "gulp release",
    "gulp-clean": "gulp clean",
    "release": "gzip -9 -c dist/index.html > dist/game.gz",
    "deploy": "npm run build && npm run release && gh-pages -d ./dist -m \"Size: $(find ./dist -maxdepth 1 -printf '%s\t%f\n' | grep game.gz | grep -Po '[0-9]+')\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-thirtyfour/js13kgame.git"
  },
  "author": "team-thirtyfour",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/team-thirtyfour/js13kgame/issues"
  },
  "homepage": "https://github.com/team-thirtyfour/js13kgame#readme",
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-preset-es2015": "6.13.2",
    "gh-pages": "^0.11.0",
    "gulp": "3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-clean": "^0.3.2",
    "gulp-clean-css": "^2.0.12",
    "gulp-gzip": "^1.4.0",
    "gulp-htmlmin": "^2.0.0",
    "gulp-inject": "^4.1.0",
    "gulp-jasmine": "^2.4.0",
    "gulp-jshint": "2.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sequence": "^0.4.5",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "1.6.0",
    "gulp-uglify": "2.0.0",
    "gulp-util": "^3.0.7",
    "html-minifier": "3.0.2",
    "indexhtmlify": "1.3.0",
    "jasmine-reporters": "^2.2.0",
    "jshint": "^2.9.3",
    "jshint-stylish": "^2.2.1",
    "require-dir": "^0.3.0",
    "rollup": "0.34.10",
    "rollup-stream": "^1.11.0",
    "rollup-watch": "2.5.0",
    "uglify-js": "2.7.3",
    "vinyl-source-stream": "^1.1.0",
    "watch": "0.19.2"
  }
}
